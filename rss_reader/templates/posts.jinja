{% extends "base.jinja" %}
{% block body %}
<button class="btn btn-primary" hx-target="next" hx-swap="none" hx-post="/posts/sync">
Sync
</button>
<ul >
  {% for post in posts %} 
    <li>
      <a href="{{ post.url }}">{{ post.title }}</a>
      <span>{{ post.published_at }}</span>
    </li>
  {% endfor %}
</ul>
{% endblock %}
